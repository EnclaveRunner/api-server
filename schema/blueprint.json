{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Blueprint",
  "definitions": {
    "Blueprint": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "apiVersion": {
          "type": "string"
        },
        "kind": {
          "type": "string"
        },
        "metadata": {
          "$ref": "#/definitions/Metadata"
        },
        "spec": {
          "$ref": "#/definitions/Spec"
        },
        "status": {
          "$ref": "#/definitions/Status"
        }
      },
      "required": ["apiVersion", "kind", "metadata", "spec"],
      "title": "Blueprint"
    },
    "Metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"],
      "title": "Metadata"
    },
    "Spec": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string"
        },
        "function": {
          "type": "string",
          "default": "main"
        },
        "params": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Param"
          }
        },
        "callback": {
          "type": "string",
          "format": "uri"
        },
        "retention": {
          "type": "string"
        }
      },
      "required": ["source"],
      "title": "Spec"
    },
    "Param": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["key", "value"],
      "title": "Param"
    },
    "Status": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "healthy": {
          "type": "boolean"
        },
        "created": {
          "type": "string"
        },
        "events": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "revisions": {
          "type": "integer"
        }
      },
      "required": ["created", "events", "healthy", "revisions"],
      "title": "Status"
    }
  }
}
